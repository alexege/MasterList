@model List<Word>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Dashboard</title>
</head>
<body>
    <div id="main">

        <button onclick="openAll()">OpenAll</button>

    <h1 id="projectName">Master List</h1>

    @foreach(var word in Model)
    {
        <div class="word" id="@word.WordId">
        <div class="topLeft cornerPiece"></div>
        <div class="topRight cornerPiece"></div>
        <div class="bottomLeft cornerPiece"></div>
        <div class="bottomRight cornerPiece"></div>

        <button id="@word.Title" class="accordion accordStyle wordButton" onmouseenter="showMenu(this)" onmouseleave="hideMenu(this)">

        <div class="contents title" contenteditable="true" onclick="event.stopPropagation();">
            @word.Title
        </div>

        <div class="menu">
            <a onclick="editWordTitle(event, this); event.stopPropagation();">
                <i class="fas fa-edit"></i>
            </a>
            <a href="/Word/Delete/@word.WordId">
                <i class="fas fa-trash-alt"></i>
            </a>
        </div>

        </button>
        <div class="panel">

            @foreach(var note in @word.Notes)
            {
                @* <button class="accordion">@note.Content</button> *@
                <div class="contents" contenteditable="true" id="definitionBox">@note.Content</div>

            }

            @* <button class="accordion definition">
                <h4>
                    <i class="fas fa-caret-right"></i>
                    Definition
                </h4>
            </button>
            <div class="panel">
                <div class="contents" contenteditable="true" id="definitionBox">@word.Definition</div>
            </div>
            
            <button class="accordion example">
                <h4>
                    <i class="fas fa-caret-right"></i>
                    Example
                </h4>
            </button>
            <div class="panel">
                <div class="contents" contenteditable="true">@word.Example</div>
            </div> *@
        </div>

        </div>

        <form asp-action="AddNote" asp-route-WordId="@word.WordId" controller="Dashboard" method="POST">
        <label for="Content">Content</label><br>
        <input class="form-control" type="text" name="Content" id="Content">

        <button class="btn">Submit</button>
        </form>
    }

    <form asp-action="AddWord" controller="Dashboard" method="POST">
        <label for="Title">Title</label><br>
        <input class="form-control" type="text" name="Title" id="Title">

        <button class="btn">Submit</button>
    </form>

    <partial name="SideNavPartial"/>

    </div> <!--End of Main-->

    </div>

</body>
</html>