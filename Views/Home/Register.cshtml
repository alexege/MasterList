@model User

<div id="registrationbox" class="text-center">
<h2>Register</h2>
<form asp-action="Register" asp-controller="Home" method="post">
    <div class="input-container">
        <i class="fa fa-user icon"></i>
        <input class="input-field" type="text" asp-for="FirstName" placeholder="First Name">
    </div>
        <span asp-validation-for="FirstName"></span>
    <div class="input-container">
        <i class="fa fa-user icon"></i>
        <input class="input-field" type="text" asp-for="LastName" placeholder="Last Name">
    </div>
        <span asp-validation-for="LastName"></span>
    <div class="input-container">
        <i class="fa fa-envelope icon"></i>
        <input class="input-field" type="text" asp-for="Email" placeholder="Email Address">
    </div>
        <span asp-validation-for="Email"></span>
    <div class="input-container">
        <i class="fa fa-key icon"></i>
        <input class="input-field" type="password" asp-for="Password" placeholder="Password">
    </div>
        <span asp-validation-for="Password"></span>
    <div class="input-container">
        <i class="fa fa-key icon"></i>
        <input class="input-field" type="password" asp-for="Confirm_Password" placeholder="Confirmation Password">
    </div>
        <span asp-validation-for="Confirm_Password"></span>
    <button class="btn">Register</button>
    <div class="registration">Already have an account? <a href="/">Login</a></div>
</form>
</div>